<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.uhsl.flowmessage.flowmessagev2.MainView">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connection info\nplaceholder space\n\n"
        android:id="@+id/connection_info" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Placeholder text"
        android:id="@+id/message_textView"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="text"
            android:text="type a message"
            android:id="@+id/input_message_editText" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:id="@+id/send_message_button" />

    </LinearLayout>


</LinearLayout>
